<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="#0097a7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:id="@+id/txt_drawer_account_picture_profile"
        android:layout_width="72dp"
        android:layout_height="72dp"

        app:layout_constraintLeft_toLeftOf="@id/txt_drawer_account_information_username"
        app:layout_constraintBottom_toTopOf="@id/txt_drawer_account_information_username"
        android:layout_marginLeft="24dp"
        />

    <TextView android:id="@+id/txt_drawer_account_information_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text=""
        android:textSize="20dp"
        android:paddingLeft="24dp"
        app:layout_constraintBottom_toTopOf="@id/txt_drawer_account_information_email"
        app:layout_constraintLeft_toLeftOf="@id/txt_drawer_account_information_email"/>

    <TextView android:id="@+id/txt_drawer_account_information_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        />

</android.support.constraint.ConstraintLayout>
